<%- layout("layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Proceed Here For Booking!</h2>
      <br />
      <form novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            placeholder="Enter Full Name"
            name="name"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter your Name.</div>
        </div>
        <div class="mb-3">
          <label for="address" class="form-label">Address</label>
          <textarea
            type="text"
            placeholder="Enter your Address"
            name="address"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please Enter your Address.</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="pin" class="form-label">Pincode:</label>
            <input
              placeholder="XXXXXX"
              name="pin"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter valid Pincode</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              placeholder="India"
              name="country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valid.</div>
          </div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="rooms" class="form-label">Rooms</label>
            <input
              type="number"
              placeholder="1,2,3.."
              name="rooms"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter valid Number</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="days" class="form-label">No. of Days</label>
            <input
              type="number"
              placeholder="1,2,3..."
              name="days"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter valid No.</div>
          </div>
        </div>
        <hr />

        <h3>Payment Details:</h3>

        <div class="pay mt-3">
          <p>Enter your Card Details to Pay</p>
          <hr />
          <br />

          <form
            novalidate
            class="needs-validation"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="mb-3 col-md-6">
                <label for="card-name" class="form-label"
                  >Name on your Card</label
                >
                <input
                  type="text"
                  placeholder="name"
                  name="card-name"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">Please enter valid Name</div>
              </div>
              <div class="mb-3 col-md-6">
                <label for="card-email" class="form-label">Email</label>
                <input
                  type="email"
                  placeholder="email"
                  name="card-email"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">Enter valid email</div>
              </div>
            </div>
            <div class="mb-3">
              <label for="card-no" class="form-label">Card Number</label>
              <input
                type="tel"
                placeholder="XXXX  XXXX  XXXX  XXXX"
                name="card-no"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please Valid Card-No.</div>
            </div>
            <div class="row">
              <div class="mb-3 col-md-6">
                <label for="exp-date" class="form-label">Expiration-Year</label>
                <input
                  type="number"
                  placeholder="yyyy"
                  name="exp-date"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Please Enter card expiry date
                </div>
              </div>
              <div class="mb-3 col-md-6">
                <label for="cvc" class="form-label">CVC</label>
                <input
                  type="number"
                  placeholder="000"
                  name="cvc"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">Enter card CVC</div>
              </div>
            </div>
            <a href="/">
              <button class="btn btn-dark add-btn mt-3">Proceed To Pay</button>
            </a>
          </form>
        </div>

        <br /><br />
      </form>
    </div>
  </div>
</body>
